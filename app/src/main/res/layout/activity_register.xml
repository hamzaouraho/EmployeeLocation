<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Register">


    <TextView
        android:id="@+id/authentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="@string/authentication"
        android:textColor="#DCB6B5AD"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:hint="@string/full_name"
        android:inputType="textPersonName"
        android:paddingLeft="35px"
        android:textColor="#F6F5F5"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/authentication"
        app:layout_constraintStart_toStartOf="@+id/authentication"
        app:layout_constraintTop_toBottomOf="@+id/authentication" />

    <EditText
        android:id="@+id/emailregister"
        android:layout_width="265dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textPersonName"
        android:paddingLeft="35px"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/fullname"
        app:layout_constraintStart_toStartOf="@+id/fullname"
        app:layout_constraintTop_toBottomOf="@+id/fullname" />

    <EditText
        android:id="@+id/passwordregister"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPersonName"
        android:paddingLeft="35px"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/emailregister"
        app:layout_constraintStart_toStartOf="@+id/emailregister"
        app:layout_constraintTop_toBottomOf="@+id/emailregister" />

    <EditText
        android:id="@+id/phoneregister"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/phone"
        android:inputType="textPersonName"
        android:paddingLeft="35px"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/passwordregister"
        app:layout_constraintStart_toStartOf="@+id/passwordregister"
        app:layout_constraintTop_toBottomOf="@+id/passwordregister" />

    <Button
        android:id="@+id/buttonregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Enregistrer"
        app:backgroundTint="#812196F3"
        app:layout_constraintEnd_toEndOf="@+id/phoneregister"
        app:layout_constraintStart_toStartOf="@+id/phoneregister"
        app:layout_constraintTop_toBottomOf="@+id/phoneregister" />

    <TextView
        android:id="@+id/loginregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Already Registred ? Login Here"
        android:textColor="#A1FFFFFF"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/buttonregister"
        app:layout_constraintStart_toStartOf="@+id/buttonregister"
        app:layout_constraintTop_toBottomOf="@+id/buttonregister" />

    <ProgressBar
        android:id="@+id/progressregister"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/loginregister"
        app:layout_constraintStart_toStartOf="@+id/loginregister"
        app:layout_constraintTop_toBottomOf="@+id/loginregister" />

</androidx.constraintlayout.widget.ConstraintLayout>