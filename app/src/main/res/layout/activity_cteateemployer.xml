<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".cteateemployer">


    <TextView
        android:id="@+id/emplauthentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="@string/authentication"
        android:textColor="#DCB6B5AD"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emplfullname"
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:hint="@string/full_name"
        android:inputType="textPersonName"
        android:paddingLeft="35px"
        android:textColor="#F6F5F5"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/emplauthentication"
        app:layout_constraintStart_toStartOf="@+id/emplauthentication"
        app:layout_constraintTop_toBottomOf="@+id/emplauthentication" />

    <EditText
        android:id="@+id/emplemail"
        android:layout_width="265dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textPersonName"
        android:paddingLeft="35px"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/emplfullname"
        app:layout_constraintStart_toStartOf="@+id/emplfullname"
        app:layout_constraintTop_toBottomOf="@+id/emplfullname" />

    <EditText
        android:id="@+id/emplpassword"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPersonName"
        android:paddingLeft="35px"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/emplemail"
        app:layout_constraintStart_toStartOf="@+id/emplemail"
        app:layout_constraintTop_toBottomOf="@+id/emplemail" />

    <EditText
        android:id="@+id/emplphone"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/phone"
        android:inputType="textPersonName"
        android:paddingLeft="35px"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/emplpassword"
        app:layout_constraintStart_toStartOf="@+id/emplpassword"
        app:layout_constraintTop_toBottomOf="@+id/emplpassword" />

    <Button
        android:id="@+id/emplbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Enregistrer"
        app:backgroundTint="#812196F3"
        app:layout_constraintEnd_toEndOf="@+id/emplphone"
        app:layout_constraintStart_toStartOf="@+id/emplphone"
        app:layout_constraintTop_toBottomOf="@+id/emplphone" />

    <TextView
        android:id="@+id/empllogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Already Registred ? Login Here"
        android:textColor="#A1FFFFFF"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/emplbutton"
        app:layout_constraintStart_toStartOf="@+id/emplbutton"
        app:layout_constraintTop_toBottomOf="@+id/emplbutton" />

    <ProgressBar
        android:id="@+id/emplprogress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/empllogin"
        app:layout_constraintStart_toStartOf="@+id/empllogin"
        app:layout_constraintTop_toBottomOf="@+id/empllogin" />

</androidx.constraintlayout.widget.ConstraintLayout>